<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset">
     <form action="/signup" method="POST" class="needs-validation" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input name="username" required type="text" id="username" class="form-control">
             <div class="valid-feedback">looks good!</div>
           </div>
           <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input name="email" required type="text" id="email" class="form-control">
             <div class="valid-feedback">looks good!</div>
           </div>
           <div class="mb-3">
            <label for="password" class="form-label">Password</label>
            <input name="password" required type="password" id="password" class="form-control">
             <div class="valid-feedback">looks good!</div>
           </div>
           <button class="btn btn-danger" >Submit</button>
     </form>
    </div>
</div>